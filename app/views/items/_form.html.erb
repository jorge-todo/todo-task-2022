<%= link_to "Back to tasks", items_path %>

<div class="margin-bottom-32"> </div>

<%= form_with(model: item) do |form| %>
  <div class="form-row">
    <div class="field-row">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field-row">
      <%= form.label :priority %>
      <%= form.number_field :priority %>
    </div>

    <div class="field-row">
      <%= form.label :due_date %>
      <%= form.date_field :due_date %>
    </div>

    <div class="field-row">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>

    <%= form.submit %>
  </div>

  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %></h2>
      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% end %>
